    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.all.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            var specialties = [];
            var jobs = [];

            $(window).on('load', async function () {

                try {

                    await loadJobsByTechnical();
                    await refreshInterfaceData();

                } catch (error) {

                    console.error('Error durante la carga de datos: ', error);
                }
            });

            $('#btInterfaceTechnical').on('click', function () {

                window.open('@Url.Action("InterfaceTechnical", "Technicals")', '_self');

                return false;
            });
            $('#btnRegisterJobDetail').on('click', async function () {

                var information = new FormData();

                information.append('Id', $('#iptId').val());
                information.append('WorkDate', $('#iptWorkDate').val());
                information.append('Time', $('#iptTime').val());
                information.append('LaborBudget', $('#iptLaborBudget').val());
                information.append('MaterialBudget', $('#iptMaterialBudget').val());
                information.append('JobState', $('#sltJobState').val());

                console.log($('#iptWorkDate').val());

                await assignJobDetail(information);

                var index = jobs.findIndex(j => j.Id === parseInt($('#iptId').val()));

                jobs[index].WorkDate = $('#iptWorkDate').val();
                jobs[index].Time = $('#iptTime').val();
                jobs[index].LaborBudget = $('#iptLaborBudget').val();
                jobs[index].MaterialBudget = $('#iptMaterialBudget').val();
                jobs[index].AmountFinal = parseFloat($('#iptLaborBudget').val()) + parseFloat($('#iptMaterialBudget').val());
                jobs[index].JobState = $('#sltJobState').val();

                fillTableJobs(jobs.filter(j => j.JobState === 'PENDIENTE'), "PENDIENTE");

                $('#iptWorkDate').val('');
                $('#iptTime').val('');
                $('#iptLaborBudget').val('');
                $('#iptMaterialBudget').val('');
            });

            $('#mdlTypeStatistic').on('hidden.bs.modal', function () {

                forceCloseStatisticModal();
            });
            $('#btnTotalReportStatistic').on('click', function () {

                window.open('@Url.Action("DetailedTechnicalStatistic", "Statistics")' + '?typeStatistic=TOTAL', '_blank');

                return false;
            });
            $('#btnMonthlyReportStatistic').on('click', function () {

                window.open('@Url.Action("DetailedTechnicalStatistic", "Statistics")' + '?typeStatistic=MENSUAL', '_blank');

                return false;
            });
            $('#btnReportReviews').on('click', function () {

                window.open('@Url.Action("ReviewStatistic", "Statistics")', '_blank');

                return false;
            });
            $('#btnInformationTechnical').on('click', async function() {

                await loadSpecialties();
                await loadInformationTechnical();
            });
            $('#btnLogout').on('click', function () {

                window.open('@Url.Action("Logout", "Access")', '_self');

                return false;
            });

            $('#dvSearchJobs').on('click', '#btnSearchJobs', function () {

                var workDateFormatted = new Date($('#iptWorkDate').val()).toISOString().split('T')[0];
                
                var filteredJobs = jobs.filter(j => {

                    var jobDate;

                    if ($('#sltJobsStates').val() !== 'EN PROCESO') {

                        jobDate = new Date(j.WorkDate).toISOString().split('T')[0];

                    } else {

                        jobDate = new Date(j.RegistrationDate).toISOString().split('T')[0];
                    }


                    return jobDate === workDateFormatted && j.JobState === $('#sltJobsStates').val();
                });

                fillTableJobs(filteredJobs, $('#sltJobsStates').val());
            });
            $('#tblJobs').on('click', '#btnJobDetail', function () {

                $(this).parents("tr").find("#tId").each(function () {

                    var id = $(this).html();

                    var filteredJobs = jobs.find(j => j.Id === parseInt(id));

                    $('#pAddress').text(`Direccion: ${filteredJobs.Address}`);
                    $('#pDescription').text(`Descripcion: ${filteredJobs.Description}`);
                });
            });
            $('#tblJobs').on('click', '#btnJobResponse', function () {

                $(this).parents("tr").find("#tId").each(function () {

                    $('#iptId').val($(this).html());
                });
            });
            $('#tblJobs').on('click', '#btnChat', function () {

                $(this).parents("tr").find("#tChatRoomId").each(function () {

                    var chatRoomId = $(this).html();

                    window.open('@Url.Action("Messaging", "Communications")' + `?chatRoomId=${chatRoomId}`, '_blank');
                });

                return false;
            });

            $('#tblJobs').on('click', '#btnCompleteJob', function () {

                var validation = false;

                $(this).parents("tr").find("#tJobState").each(function () {

                    var jobState = $(this).html();

                    if (jobState === 'COMPLETADO') {

                        validation = true;
                    }
                });

                $(this).parents("tr").find("#tId").each(async function () {

                    if (validation !== true) {

                        var id = $(this).html();

                        var information = new FormData();

                        information.append('Id', id);
                        information.append('JobState', 'COMPLETADO');

                        await completeJob(information);

                        var index = jobs.findIndex(j => j.Id === parseInt(id));

                        jobs[index].JobState = 'COMPLETADO';

                        fillTableJobs(jobs.filter(j => j.JobState === 'PENDIENTE'), "PENDIENTE");

                    } else {

                        Swal.fire({
                            icon: 'error',
                            title: 'Error al completar trabajo!',
                            text: 'No puedes marcar como completado porque el trabajo ya esta completo.'
                        });
                    }
                });
            });

            $('#uChatsMembers').on('click', '#btnChat', function () {

                $(this).parents("li").find("#spnChatRoomId").each(function () {

                    var chatRoomId = $(this).html();

                    window.open('@Url.Action("Messaging", "Communications")' + `?chatRoomId=${chatRoomId}`, '_blank');
                });

                return false;
            });

            async function loadSpecialties() {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("AllSpecialties", "Specialties")',
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    specialties = data;

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            async function loadJobsByTechnical() {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("JobsByTechnical", "Attentions")',
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    jobs = data;

                    fillTableJobs(jobs.filter(j => j.JobState === 'PENDIENTE'), 'PENDIENTE');

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            async function completeJob(information) {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("CompleteJob", "Attentions")',
                        method: 'POST',
                        data: information,
                        cache: false,
                        contentType: false,
                        processData: false
                    });

                    if (data === true) {

                        Swal.fire({
                            icon: 'success',
                            title: 'Trabajo completado!',
                            text: 'Se completo el trabajo correctamente.'
                        });
                    } else {

                        Swal.fire({
                            icon: 'error',
                            title: 'Error al completar trabajo!',
                            text: 'Se produjo un error al intentar completar el trabajo.'
                        });
                    }

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            async function refreshInterfaceData() {

                try {

                    var generalTechnicalStatistic = await jQuery.ajax({

                        url: '@Url.Action("GeneralTechnicalStatistic", "Technicals")',
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    for (const item of generalTechnicalStatistic) {

                        $('#spnTotalIncome').text(item.TotalIncome);
                        $('#spnTotalConsumersServed').text(item.TotalConsumersServed);
                        $('#spnTotalWorkTime').text(item.TotalWorkTime);
                        $('#spnTotalPendingsJobs').text(item.TotalPendingsJobs);
                    }

                    var chatsMembersByTechnical = await jQuery.ajax({

                        url: '@Url.Action("ChatsMembersByTechnical", "Communications")',
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    var contentHtml = '';

                    for (const item of chatsMembersByTechnical) {

                        contentHtml += `
                            <li>
                                <a id="btnChat" class="nav-link d-flex align-items-center">
                                    <div class="me-4">
                                        <div class="position-relative d-inline-block text-white">
                                            <img alt="image" src="${item.ProfileUrl}" class="avatar rounded-circle">
                                            <span class="position-absolute bottom-2 end-2 transform translate-x-1/2 translate-y-1/2 border-2 border-solid border-current w-3 h-3 bg-success rounded-circle"></span>
                                        </div>
                                    </div>
                                    <div>
                                        <span id="spnChatRoomId" style="display:none;">${item.ChatRoomId}</span>
                                        <span class="d-block text-sm font-semibold">${item.Firstname}</span>
                                        <span class="d-block text-xs text-muted font-regular">${item.Lastname}</span>
                                    </div>
                                    <div class="ms-auto"> <i class="bi bi-chat"></i> </div>
                                </a>
                            </li>`;
                    }

                    $('#uChatsMembers').html(contentHtml);

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            async function loadInformationTechnical() {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("InformationTechnical", "Technicals")',
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8'
                    });

                    var filteredSpecialties = specialties.find(s => s.Id === data.SpecialtyId);

                    var contentHtml = `
                        <div class="text-center">
                            <img src="${data.ProfileUrl}" alt="Imagen de perfil" class="img-fluid rounded" style="max-height: 400px;">
                        </div>
                        <br>
                        <p>Membresia: ${data.Membership}</p>
                        <br>
                        <p>Especialidad: ${filteredSpecialties.Name}</p>
                        <br>
                        <p>Nombres: ${data.Firstname}</p>
                        <br>
                        <p>Apellidos: ${data.Lastname}</p>
                        <br>
                        <p>Edad: ${data.Age}</p>
                        <br>
                        <p>Email: ${data.Email}</p>
                        <br>
                        <p>Telefono: ${data.Phone}</p>
                        <br>`;

                    $('#dvInformationTechnical').html(contentHtml);

                } catch (error) {

                    window.open('@Url.Action("Error", "Home")', '_self');
                }
            }

            async function assignJobDetail(information) {

                try {

                    var data = await jQuery.ajax({

                        url: '@Url.Action("AssignJobDetail", "Attentions")',
                        method: 'POST',
                        data: information,
                        cache: false,
                        contentType: false,
                        processData: false
                    });

                    if (data === true) {

                        $('#mdlJobResponse').modal('hide').on('hidden.bs.modal', function () {
                            $('.modal-backdrop').remove();
                        });

                        Swal.fire({
                            icon: 'success',
                            title: 'Respuesta enviada!',
                            text: 'La respuesta del trabajo se ha realizado correctamente.'
                        });

                    } else {

                        Swal.fire({
                            icon: 'error',
